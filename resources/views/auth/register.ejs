    }
    else
      x.type = "password";
  }

  function agreebtnajax() {
    console.log("sbcisbai")
    if ($('#tandcagree').is(':checked')) {
      console.log("tandcCheckBox")
      document.getElementById("realButton").click()
    }
    else {
      alert("You must agree with the terms and conditions of services.");
      return false;
    }
  }


  function callAjaxOtp() {
    var email = $('#email').val();
    var phone = $('#phone').val();

    if (email && phone) {
      if ($('#phone').val().length == 10) {
        $.ajax({
          url: "/send-otp-on-phone",
          type: "POST",
          data: {
            phone: phone,
            email: email
          }
        }).done(function (data) {
          if (data.msg == "Success") {
            document.getElementById("clickOk").click()
            alert("Otp Send Successfully")
          } else {
            alert(data.msg)
          }
        })
      } else {
        alert("Enter 10 digit phone no.");
      }
    } else {
      alert("Enter phone & email")
    }
  }

</script>