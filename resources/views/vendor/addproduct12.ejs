<script >
        let vol1 = document.querySelector('.volumeSwitch')
    let vol2 = document.querySelector('.volumeSwitchOff')

    vol1.addEventListener("click", switchOn);
    vol2.addEventListener("click", switchOff);
    var sizePlaceholder = "Enter Size";
    function switchOn() {
        sizePlaceholder = "Enter Volume";
        $("#rolonum").load(location.href + " #rolonum");
    }

    function switchOff() {
        sizePlaceholder = "Enter Size";
        $("#rolonum").load(location.href + " #rolonum");
    }
    $(document).ready(function() {
    $('#category-dropdown').on('change', function() {
    var category_id = this.value;
    $("#subcategory-dropdown").html('');
    $.ajax({
    url: "/fetch/subcat/",
    type: "POST",
    data: {
    category_id: category_id,
    },
    dataType: 'json',
    success: function(result) {
    $("#subcategory-dropdown").append('<option value="">Select Subcategory</option>');
    $.each(result.subcats, function(key, value) {
        $("#subcategory-dropdown").append('<option value="' + value._id + '">' + value.name + '</option>');
    });
    }
    });
    });
    });
    function add_inputs() {
    n = $('#my_input').val();
    $("#rolonum").html('');
    for (var i = 1; i <= n; i++) {
      $("#rolonum").append('<span>Variant ' + i + ' </span><br/><input id="rolo_code' + i +
       '" name="vcodes" placeholder = "Enter Code" type="text" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" value="" required/> <input id="rolo_add' + i + 
       '" name="variant" placeholder = "' + sizePlaceholder+'"  type="text" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" value="" required/> <input id="rolo_price' + i + 
       '" name="prices" placeholder = "Enter Price"  type="number" step=".0001" value="" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" required/><input id="rolo_add' + i + 
       '" name="descriptions" placeholder = " Enter Description ( optional )"  type="text" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" value="" /> <input id="rolo_price' + i + 
       '" name="piecePerPacks" placeholder = "Piece per pack ( eg:- 12, 2, etc. )"  type="number" value="" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" required/><input id="rolo_price' + i + 
       '" name="itemWeights" placeholder = "Weight ( per pack ) (optional)"  type="number" value="" class="my-1 w-full px-2 py-2 text-sm border border-gray-300 rounded lg:text-sm focus:outline-none focus:ring-1 focus:ring-blue-600" /><br><br>');
      
    }

  }
</script>