<section class="login min-h-full">

  <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Create Coupon Code
        </h2>

      </div>

      <% if(messages.error) { %>
        <span class="text-red-600 mt-2 text-center font-medium text:xs">
          <%= messages.error%>
        </span>
        <% } %>


          <form class="mt-8 space-y-6" action="/createCoupon" method="post">

            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">

              <div>
                <label for="coupon" class="sr-onl">Coupon Type</label>
                <select name="coupontype" id=""
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm"
                  required>
                  <option value="">Select</option>
                  <option value="onGeneral">General</option>
                  <option value="onAmount">Specific Amount</option>
                  <option value="onSpecific">Specific user</option>
                  <option value="onBrand">Brand</option>
                  <option value="onCategory">Category</option>
                  <option value="onSubcategory">Subcategory</option>
                </select>
              </div>

              <div>
                <label for="coupon" class="sr-onl">Coupon Name</label>
                <input id="coupon" name="coupon" type="text" autocomplete="coupon"
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="Enter coupon name">
              </div>

              <div>
                <label for="coupon" class="sr-onl">Specific Amount</label>
                <input type="number" id="disUptoThisAmount" name="disUptoThisAmount" type="text" autocomplete="coupon"
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="Enter specific amount on which discount is applicable">
              </div>

              <div>
                <label for="coupon" class="sr-onl">Specific User</label>
                <select name="victimId" id="" class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm">
                  <option value="">Select</option>
                  <% allUsers.forEach((brand)=> { %>
                    <option value="<%= brand._id %>">
                      <%= brand.fname %>
                        <%= brand.lname %>
                    </option>
                    <% }) %>
                </select>
              </div>

              <div>
                <label for="coupon" class="sr-onl">On Brand</label>
                <select name="brand" id=""
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm">
                  <option value="">Select</option>
                  <% brands.forEach((brand)=> { %>
                    <option value="<%= brand._id %>">
                      <%= brand.name %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div>
                <label for="coupon" class="sr-onl">On Category</label>
                <select name="category" id=""
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm">
                  <option value="">Select</option>
                  <% categorys.forEach((brand)=> { %>
                    <option value="<%= brand._id %>">
                      <%= brand.pcategory %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div>
                <label for="coupon" class="sr-onl">On Subcategory</label>
                <select name="subcategory" id=""
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm">
                  <option value="">Select</option>
                  <% subCategorys.forEach((brand)=> { %>
                    <option value="<%= brand._id %>">
                      <%= brand.productSubcategory %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <div>
                <label for="percentage" class="sr-onl">Discount Percentage</label>
                <input type="number" id="percentage" name="percentage" type="text" autocomplete="coupon" required
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="">
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="text-sm">
                <a href="#" class="font-bol font-medium">
                  See All Coupons
                </a>
              </div>


              <div class="flex items-center">
                <label for="remember-me" class="ml-2 block font-bold font-medium">
                </label>
              </div>

            </div>

            <div>
              <button type="submit" value="submit"
                class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Create
              </button>
            </div>
          </form>
          <p class="text-center text-gray-500 text-xs">
            &copy;2022 Gearloose Labs. All rights reserved.
          </p>
    </div>
  </div>

</section>