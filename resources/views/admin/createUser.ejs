<section class=" min-h-full">

    <div id="ideal" class="py-3 px-4 sm:px-6 lg:px-8" style="display: non;">

            
                <h2 class="m-10 text-center text-3xl font-extrabold text-gray-900">
                    CREATE USER
                </h2>

           
        </div>
        <div class="w-3/4 flex mx-auto">

            <% if(messages.error) { %>
            <span class="text-red-600 text-xs mx-auto text-center font-medium">
              <%= messages.error%>
            </span>
            <% } %>
      
                    
            <% if(messages.OnRegisterDone) { %>
              <script>
                swal("User Successfully Registered", "Thank you", "success")
              </script>
             <% } %>
      
      
          </div>

        <form class="flex justify-center w-full mx-auto" action="/admin/createUser" method="POST">
            <div class="pb-12 border-gray-500">


                    <div class="w-full lg:w-96 mt-4">
                        <label for="user-name" class="block mb-3 text-sm font-semibold text-gray-500">
                            First Name</label>
                        <input id="user-name" name="fname" type="text" required
                            class="appearance-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                            >
                    </div>
                    <div class="w-full lg:w-96 mt-4">
                        <label for="last-name" class="block mb-3 text-sm font-semibold text-gray-500">
                            Last Name</label>
                        <input id="last-name" name="lname"  type="text" required
                            class="appearance-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                            >
                    </div>
                    <div class="w-full lg:w-96 mt-4">
                        <label for="phone" class="block mb-3 text-sm font-semibold text-gray-500">
                            Phone Number</label>
                        <input id="phone" name="phone" type="number" required
                            class="appearance-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                            >
                    </div>
              

                

                   

                    <div class="w-full lg:w-96 mt-4">
                        <label for="email" class="block mb-3 text-sm font-semibold text-gray-500">
                            Email</label>
                        <input id="email-address" name="email" value="<%= messages.email%>" type="email"
                            autocomplete="email" required
                            class="appearance-none  relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                            placeholder="employee@admin.com">
                    </div>

                <div class="w-full lg:w-96 mt-4">
                        <label for="RegisteredAs" class="block mb-3 text-sm font-semibold text-gray-500">
                            Register as</label>
                        <select name="role"
                            class="appearance-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm">
                            <option value="customer">User</option>
                            <option value="vendor">Vendor & Other</option>
                            <option value="admin">Administrative Staff</option>
                        </select>
                </div>
                    <div class="w-full lg:w-96 mt-4">
                        <label for="RegisteredAs" class="block mb-3 text-sm font-semibold text-gray-500">
                            Permissions</label>
                            <ul class="w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg ">
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="newOrders-checkbox" name="newOrders" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="newOrders-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">New Orders</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="addProducts-checkbox" name="addProducts" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="addProducts-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Add Products</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="verifyUserListedProducts-checkbox" name="verifyUserListedProducts" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="verifyUserListedProducts-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900">Verify User List</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="verifyUserDocuments-checkbox" name="verifyUserDocuments" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="verifyUserDocuments-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Verify User Documents</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="addNewCategory-checkbox" type="checkbox" name="addNewCategory" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="addNewCategory-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Add New Category</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="deleteProduct-checkbox" type="checkbox" name="deleteProduct" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="deleteProduct-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Delete Products</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="adminListedProducts-checkbox" name="adminListedProducts" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="adminListedProducts-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Admin Listed Products</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="editProducts-checkbox" name="editProducts" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="editProducts-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Edit Products</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="viewCustomers-checkbox" name="viewCustomers" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="viewCustomers-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">View Customer</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="viewVendors-checkbox" name="viewVendors" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="viewVendors-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">View Vendors</label>
                                    </div>
                                </li>
                                <li class="w-full border-b border-gray-200 rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="createUsers-checkbox" name="createUsers" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="createUsers-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">Create Users</label>
                                    </div>
                                </li>
                                <li class="w-full  rounded-t-lg ">
                                    <div class="flex items-center pl-3">
                                        <input id="verifiedUsers-checkbox" name="verifiedUsers" type="checkbox" value="true" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded ">
                                        <label for="verifiedUsers-checkbox" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 ">View Verified Users</label>
                                    </div>
                                </li>
                            </ul>
                            
                    </div>


                    <div class="w-full lg:w-96 mt-4">
                        <label for="password" class="block mb-3 text-sm font-semibold text-gray-500">
                            Password

                            
                        </label>
                        <input id="password" name="password" type="password" autocomplete="current-password" required
                            class="appearance-non  relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                            placeholder="Example: Jai@1105"><span onclick="myFunction()" class="eye"><i
                                class="fa fa-eye-low-vision"></i></span>
                    </div>


                <div class="mt-4">
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">

                            <svg class="h-5 w-5 text-white-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                    d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                    clip-rule="evenodd" />
                            </svg>
                        </span>
                        Register
                    </button>
                </div>

            </div>

        </form>
  

</section>

<script>
    function myFunction() {
        var x = document.getElementById("password");

        if (x.type === 'password') {
            x.type = "text";
        }
        else
            x.type = "password";
    }
</script>
