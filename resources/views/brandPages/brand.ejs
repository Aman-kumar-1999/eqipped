<div id="prod" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 col-gap-12 row-gap-16">
  <% lancer.forEach((product)=> {
    if(product.image[0].imgName !== "default.webp"){ %>
    <div class="flex flex-col items-center gap-2 px-2 py-6 relative hover:shadow-lg">

      <a href="/productDetails/<%= product.pname %>/<%= product._id %>/1"
        class="flex flex-col items-center text-center group">


        <div class="w-36 h-36">
          <img draggable="false" class="w-full h-full object-contain" src="/img/<%= product.image[0].imgName %>"
            alt="<%= product.pname %>" />
        </div>


        <% if( product.variationname !='undefined' && product.variationname !=null) { %>
          <h2 class="text-sm mt-4 group-hover:text-blue-500">
            <%= product.pname %> - <%= product.variationname %>
          </h2>
          <% } else { %>
            <h2 class="text-sm mt-4 group-hover:text-blue-500">
              <%= product.pname %>
            </h2>
            <% } %>


              <% if(product.brand){ %>
                <span class="text-gray-400 text-xs ">Brand: <%= product.brand.name %></span>
                <% } %>

                  <div class="flex flex-col gap-2 items-center">

                    
                      <div class="flex items-center gap-1.5 text-md font-medium">
                        <span>₹<%= Math.ceil((product.packPrice) - ((product.packPrice)*(product.brand.discount)/100))
                            %></span>
                        <span class="text-gray-500 line-through text-xs">₹<%= product.packPrice %>
                        </span>
                        <span class="text-xs font-medium text-lime-500">
                          <%= product.brand.discount %>%&nbsp;off
                        </span>
                      </div>
                     

                  </div>
      </a>
    </div>
    <%}else{%>
    <% }}) %>
</div>